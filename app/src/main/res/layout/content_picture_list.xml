<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_picture_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_picture_list"
    tools:context="org.jos.pictureuploader.PictureListActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picture_sets"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="27dp"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/content_picture_list"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/content_picture_list"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/content_picture_list"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/content_picture_list"
        tools:layout_constraintBottom_creator="0"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.05"/>

    <ListView
        android:layout_width="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="51dp"
        android:layout_height="match_parent"
        android:id="@+id/list"
        app:layout_constraintLeft_toLeftOf="@+id/content_picture_list"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="0"/>

</android.support.constraint.ConstraintLayout>
