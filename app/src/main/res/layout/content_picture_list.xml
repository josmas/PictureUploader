<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_picture_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_picture_list"
    tools:context="org.jos.pictureuploader.PictureListActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picture_sets"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="17dp"
        android:id="@+id/textView"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toLeftOf="@+id/content_picture_list"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/list"
        android:layout_marginBottom="7dp"
        tools:layout_constraintBottom_creator="1"/>

    <TextView
        android:text="@string/upload_note"
        android:layout_width="0dp"
        android:layout_height="80dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="308dp"
        android:id="@+id/textView2"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintLeft_toLeftOf="@+id/content_picture_list"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/list"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/content_picture_list"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"/>

    <Button
        android:text="@string/upload_all_now"
        android:layout_width="138dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="396dp"
        android:id="@+id/upload_button"
        app:layout_constraintLeft_toLeftOf="@+id/content_picture_list"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/content_picture_list"
        tools:layout_constraintRight_creator="1"/>

    <ListView
        android:layout_width="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_height="250dp"
        android:id="@+id/list"
        app:layout_constraintLeft_toLeftOf="@+id/content_picture_list"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/content_picture_list"
        android:layout_marginTop="50dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/content_picture_list"
        tools:layout_constraintRight_creator="1"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="418dp"
        android:id="@+id/progressBarUpload"
        app:layout_constraintLeft_toLeftOf="@+id/content_picture_list"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/upload_button"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/content_picture_list"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/upload_button"
        tools:layout_constraintBottom_creator="0"
        />


</android.support.constraint.ConstraintLayout>
